<%= form_for([@project, @project.texts.build]) do |f| %>
    <p>
      <%= f.label :titel %><br/>
      <%= f.text_field :titel %>
    </p>
    <p>
      <%= f.label :text %><br/>
      <%= f.text_area :text, :size => "50x5" %>
    </p>
    <p>
      <%= f.submit "Text Speichern", class: "btn btn-lg btn-primary" %>
    </p>
<% end %>